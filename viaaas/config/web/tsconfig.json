{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "alwaysStrict": true,
    "strict": true
  },
  "include": [
    "js/**.ts"
  ]
}